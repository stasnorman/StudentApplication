<Page x:Class="StudentApp200123.Pages.PageSetGrade"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentApp200123.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageSetGrade">

    <Grid>
        <StackPanel
            VerticalAlignment="Center"
            >
            
        <GroupBox Header="Выберите студента">
            <ComboBox 
                Name="CmbSelectStudent"/>
        </GroupBox>
            
        <GroupBox Header="Выберите оценку">
            <ComboBox 
                Name="CmbSelectGrade"/>
        </GroupBox>
            
        <GroupBox Header="Выберите дисциплину">
            <ComboBox 
                Name="CmbSelectDiscipline"
                />
        </GroupBox>

            <Button 
                Name="BtnSetGrade"
                Content="Выставить оценку"
                Click="BtnSetGrade_Click"
                />
        </StackPanel>
    </Grid>
</Page>
